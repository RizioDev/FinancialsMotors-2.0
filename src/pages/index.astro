---
import Promot from "../components/Promot/Promot.jsx";
import Banner from "../components/Banner/Banner.jsx";
import Baner from "../components/Baner.astro";
import Detail from "../components/Detail/Detail.jsx";
import FichaTecnica from "../components/FichaTecnica.jsx";
import Mapa from "../components/Mapa.astro";
import Layout from "../layouts/Layout.astro";
import WhatsappBtn from "../components/WasapBtn/WhatsappBtn.jsx";
import SideToSide from "../components/SideToSide/SideToSide.jsx";

const rouser = {
  nombreMoto: "Rouser NS200",
  reserva: "450.000",
  imgMoto: {
    textoImg: "/imgRouser/rouserTexto.png",
    bannerTop: "/imgRouser/bannerTopRouser.png",
    swiperUno: "/imgRouser/rouserFotoUno.png",
    swiperDos: "/imgRouser/rouser-azul.png",
    swiperTres: "/imgRouser/rouser-blanco.png",
    swiperCuatro: "/imgRouser/rouser-rojo.png",
    promoImg: "/imgRouser/loca.webp",
    promoImg2: "/imgRouser/rouserPromoUno.jpg",
    fichaImg: "/imgRouser/fichaRouser.png",
    bannerMid: "/imgSkua/bannerSkua.png",
    bannerMidMovil: "/imgSkua/bannerMobilSkua.png",
  },
  fichaTecnica: {
    motor: "Monocilíndrico 4T",
    potenciaMax: "46,2/8500 8 (CV/rpm)",
    transmision: "Manual 6 Velocidades",
    rodadoDelantero: "120/70",
    rodadoTrasero: "160/60",
    frenoDelantero: "Disco Abs",
    refrigeracion: "Líquida",
    velocidadMax: "160 km/h",
    peso: "145 kg",
    ancho: "780",
    alto: "1060",
    alarma: "No Incluye",
    alimentacion: "Inyección electrónica",
    arranque: "Eléctrico",
    frenoTrasero: "Disco Abs",
    tanque: "12 lts",
    equipamientos: "Tablero digital, baúles traseros",
  },
};
---

<Layout title="Financials Motors">
  <WhatsappBtn moto={rouser} />
  <Banner moto={rouser} client:load />
  <Detail moto={rouser} client:load />
  <Promot moto={rouser} client:load />
  <FichaTecnica moto={rouser} client:load />
  <Baner />
  <SideToSide moto={rouser} />
  <Mapa />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  :root {
    /* Add these styles to your global stylesheet, which is used across all site pages. You only need to do this once. All elements in the library derive their variables and base styles from this central sheet, simplifying site-wide edits. For instance, if you want to modify how your h2's appear across the site, you just update it once in the global styles, and the changes apply everywhere. */
    --primary: #ff9966;
    --primaryLight: #ffba43;
    --secondary: #ffba43;
    --secondaryLight: #ffba43;
    --headerColor: #0a0000;
    --bodyTextColor: #4e4b66;
    --bodyTextColorWhite: #fdfdfd;
    /* 13px - 16px */
    --topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
    /* 31px - 49px */
    --headerFontSize: clamp(1.9375rem, 3.9vw, 3.0625rem);
    --bodyFontSize: 1rem;
    /* 60px - 100px top and bottom */
    --sectionPadding: clamp(3.75rem, 7.82vw, 6.25rem) 1rem;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: "Courier New", Courier, monospace;
    background-color: #0f172a;
  }

  *,
  *:before,
  *:after {
    /* prevents padding from affecting height and width */
    box-sizing: border-box;
  }
  .cs-topper {
    font-size: var(--topperFontSize);
    line-height: 1.2em;
    text-transform: uppercase;
    text-align: inherit;
    letter-spacing: 0.1em;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 0.25rem;
    display: block;
  }

  .cs-title {
    font-size: var(--headerFontSize);
    font-weight: 900;
    line-height: 1.2em;
    text-align: inherit;
    max-width: 43.75rem;
    margin: 0 0 1rem 0;
    color: var(--headerColor);
    position: relative;
  }

  .cs-text {
    font-size: var(--bodyFontSize);
    line-height: 1.5em;
    text-align: inherit;
    width: 100%;
    max-width: 40.625rem;
    margin: 0;
    color: var(--bodyTextColor);
  }
</style>
