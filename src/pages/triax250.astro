  reserva: "450.000",
  imgMoto: {
    textoImg: "/imgTriax/triaxTexto.png",
    bannerTop: "/imgTriax/bannerTopTriax.png",
    swiperUno: "/imgTriax/triaxFotoUno.png",
    swiperDos: "/imgTriax/triax250-blanco.png",
    swiperTres: "/imgTriax/triax250-negro.png",
    swiperCuatro: "/imgTriax/triax250-rojo.png",
    promoImg: "/imgTriax/triaxPromo.jpg",
    financiaImg: "",
    bannerImg: "",
    fichaImg: "",
    banner2img: "",
    bannerMovilImg: "",
    aboutImg: "",
    about2img: "",
  },
  fichaTecnica: {
    motor: "",
    potenciaMax: "",
    transmision: "",
    rodadoDelantero: "",
    rodadoTrasero: "",
    frenoDelantero: "",
    refrigeracion: "",
    velocidadMax: "",
